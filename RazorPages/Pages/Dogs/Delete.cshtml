@page
@model RazorPages.Pages.Dogs.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Item.GetType().Name</h4>
    <hr />
    @foreach (var property in Model.Item.GetType().GetProperties())
    {
        <dl class="dl-horizontal @Model.GetPropertyCss(property)">
            @if (Model.PropertyShowable(property))
            {
                if (Model.CustomLayoutExists(property))
                {
                    @Model.GetCustomLayout(property)
                }
                else
                {
                    <dt>
                        @Model.GetPropertyName(property)
                    </dt>
                    <dd>
                        @property.GetValue(Model.Item)
                    </dd>
                }
            }
        </dl>
    }

    <form method="post">
        <input type="hidden" asp-for="Item.Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
